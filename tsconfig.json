{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "nodenext",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
